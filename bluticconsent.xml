<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="system" method="upgrade" version="3.9" client="site">
    <name>plg_system_bluticconsent</name>
    <author>Blutic Team</author>
    <creationDate>December 2024</creationDate>
    <copyright>Copyright (C) 2024 Blutic Team. All rights reserved.</copyright>
    <license>GPL v2 or later</license>
    <authorEmail>support@blutic.com</authorEmail>
    <authorUrl>https://blutic.com</authorUrl>
    <version>1.0.0</version>
    <description>Blutic Cookie Consent Banner Integration</description>

    <files>
        <filename plugin="bluticconsent">bluticconsent.php</filename>
    </files>

    <config>
        <fields name="params">
            <fieldset name="basic" label="Basic Settings">
                <field name="enabled" type="radio" default="1" label="Enable Plugin" description="Enable or disable the Blutic cookie consent plugin" class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="domain_id" type="text" label="Domain ID" description="Your Domain ID provided by Cookie Manager" required="true" filter="string" />
            </fieldset>
        </fields>
    </config>


</extension>